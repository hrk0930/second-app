<div class="chat-header1">
<div class="room1">

    <select name="select" onChange="location.href=value;">
          <option>チャットするルームを選択してください</option>
          <option value="messages#index">ニコニコルーム１</option>
          <option value="chats#index">グリーンルーム</option>
        </select>
  </div>
</div>

<div class="messages0">
<%= render partial: 'message', collection: @messages, class: 'messages1'%>
</div>

<%= form_with model: @message, class: 'form-1', local: true do |f| %>
  <div class="form-input1">
    <%= f.text_field :text, class: 'form-message1', placeholder: 'メッセージを送ってね〜♫' %>
    <label class="form-image1">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden1' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit1' %>
<% end %>